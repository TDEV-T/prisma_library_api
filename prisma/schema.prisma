generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  username String   @id
  name     String
  password String
  phone    String
  borrow   Borrow[]
}

model TypeBook {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Book {
  id     String   @id
  name   String
  author String
  type   TypeBook @relation(fields: [typeId], references: [id])
  typeId Int
  borrow Borrow[]
}

model Borrow {
  id   Int    @id @default(autoincrement())
  user Member @relation(fields: [uid], references: [username])
  uid  String
  book Book   @relation(fields: [bid], references: [id])
  bid  String
}
