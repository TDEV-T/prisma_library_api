generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_member {
  m_user  String           @id
  m_name  String
  m_pass  String
  m_phone String
  borrow  tb_borrow_book[]
}

model administator {
  username     String           @id
  name         String
  password     String
  phone        String
  borrowmanage tb_borrow_book[]
}

model tb_book {
  b_id       String           @id
  b_name     String
  b_writer   String
  b_category Int
  borrow     tb_borrow_book[]
}

model tb_borrow_book {
  br_date_br DateTime     @id @default(now())
  user       tb_member    @relation(fields: [uid], references: [m_user])
  uid        String
  admin      administator @relation(fields: [aid], references: [username])
  aid        String
  book       tb_book      @relation(fields: [bid], references: [b_id])
  bid        String
}
